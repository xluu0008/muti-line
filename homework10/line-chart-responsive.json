{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "/line.csv"
  },
  "width": "container",
  "title": "Total Vaccinations Consumed Over 2021", 
 
  "mark": {
    "type": "line",
    "interpolate": "monotone"
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "timeUnit": "month",
      "title": "" 
    },
    "y": {
      "field": "total",
      "aggregate": "mean",
      "title": "Vaccinations" 
    },
  
    "color": {
 
      "type": "nominal",
      "field": "country",  
      "scale": {
        "domain": [
          "China",
          "Brazil",
          "India",
          "United States",
          "England",
          "United Kingdom",
          "Germany"
        
        ],
        "range": [
          "#EF5350",
          "#FF5722",
          "#7E57C2",
          "#2196F3",
          "#4CAF50",
          "#FFB300",
          "#757575"
         
        ]
      },
      "title": "Country" 
    },
    "tooltip": [
      {"field": "country", "type": "nominal","title": "Country"},
      {"field": "date", "type": "temporal", "timeUnit": "month", "title": "Month"},
      {"field": "total","title": "Vaccinations"}
    ]
  },

  "config": {}
}